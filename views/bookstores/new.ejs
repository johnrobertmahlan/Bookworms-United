<%- include('../partials/header') %>

<div id="add-bookstore">
    <form id="add-bookstore-form" action="/bookstores" method="POST">
        <fieldset>
            <legend>Enter Bookstore</legend>
            <label>Name:</label><br />
            <input type="text" name="name"><br />
            <label>Address:</label><br />
            <input type="text" name="address"><br />
            <label>Popular Genres:</label><br />
            <select name="genres" multiple="multiple">
                <option value="Science Fiction">Science Fiction</option>
                <option value="Fantasy">Fantasy</option>
                <option value="Horror">Horror</option>
                <option value="Mystery">Mystery</option>
                <option value="Comics/Graphic Novels">Comics/Graphic Novels</option>
                <option value="Romance">Romance</option>
                <option value="History">History</option>
                <option value="Politics/Current Affairs">Politics/Current Affairs</option>
                <option value="Philosophy">Philosophy</option>
                <option value="Science">Science</option>
            </select><br />
            <label>Website:</label><br />
            <input type="text" name="website"><br />
            <input type="submit" value="Add Bookstore">
        </fieldset>
    </form>
</div>


<%- include('../partials/footer') %>