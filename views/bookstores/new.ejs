<%- include('../partials/header') %>

    <form id="add-bookstore-form" action="/bookstores" method="POST">
        <fieldset id="new-bookstore">
            <p>
                <label>Name:</label><br />
                <input type="text" name="name">
            </p>
            <p>
                <label>Address:</label><br />
                <input type="text" name="address">
            </p>
            <p>
                <label>Popular Genres:</label><br />
                <select name="genres" multiple="multiple">
                    <option value="Science Fiction">Science Fiction</option>
                    <option value="Fantasy">Fantasy</option>
                    <option value="Horror">Horror</option>
                    <option value="Mystery">Mystery</option>
                    <option value="Comics/Graphic Novels">Comics/Graphic Novels</option>
                    <option value="Romance">Romance</option>
                    <option value="History">History</option>
                    <option value="Politics/Current Affairs">Politics/Current Affairs</option>
                    <option value="Philosophy">Philosophy</option>
                    <option value="Science">Science</option>
                </select>
            </p>
            <p>
                <label>Website:</label><br />
                <input type="text" name="website">
            </p>
            <p>
                <input type="submit" value="Add Bookstore">
            </p>
        </fieldset>
    </form>


<%- include('../partials/footer') %>